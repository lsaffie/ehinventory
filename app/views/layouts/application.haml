!!! XML                                                                                
!!! strict                 
%html{:xmlns => "http://www.w3.org/1999/xhtml"} 
  %head
    %title                 
      =yield :title 
    =javascript_include_tag 'prototype'
    =javascript_include_tag :defaults
    =stylesheet_link_tag 'style'
  %body
    #header
      =link_to_remote "Hardwares", :url => hardwares_path, :method => :get
      |
      =link_to_remote "Softwares", :url => softwares_path, :method => :get
      |
      =link_to_remote "Documents", :url => documents_path, :method => :get
      |
      =link_to "Ports", ports_path
      |
      =link_to_remote "Groups", :url => groups_path, :method => :get
      |
      =link_to_remote "Users", :url => owners_path, :method => :get
      |
      =link_to_remote "Hardware Types", :url => hardware_types_path, :method => :get
      |
      =link_to "Rooms", rooms_path
      |
      =link_to "Todo", tasks_path
      
      #loginlink
        -if logged_in?
          =link_to "Log Out", logout_path
        -else
          =link_to "Log In", login_path

    %p{:style => "color: green"}
      =flash[:notice]
    #busy{:style => "display: none"}
      %img{:src => '/images/loader.gif'}
    #container
      =yield
