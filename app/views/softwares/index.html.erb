<% form_tag softwares_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search Softwares", :name => nil %>
	</p>
<% end %>

<h1>Softwares</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Owner</th>
    <th>Actions</th>
  </thead>

<% for software in @softwares %>
  <tr class="<%=cycle('even','odd')%>">
    <td><%=link_to software.name, software %></td>
    <td><%=h software.owner %></td>
    <td><%= link_to 'Destroy', software, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New software', new_software_path %>
