<h1>New hardware</h1>

<% form_for(@hardware) do |f| %>
  <%= f.error_messages %>

	<%= select("hardware_type","hardware_type_id", HardwareType.find(:all).collect {|p| [p.name, p.id]}, { :include_blank => true}) %>

  <p>
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </p>

  <p>
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </p>
  <p>
    <%= f.label :mac %><br />
    <%= f.text_field :mac %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', hardwares_path %>
