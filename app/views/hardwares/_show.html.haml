%table
  %tr
    %td
      %b
        Created On:
    %td
      =h @hardware.created_at.strftime("%m/%d/%Y")
  %tr
    %td
      %b
        Hardware Type:
    %td
      %b
      =h @hardware.hardware_type.name 
  %tr
    %td
      %b
        Serial Number:
    %td
      =h @hardware.serial_number 
  %tr	
    %td
      %b
        Brand:
    %td
      =h @hardware.brand 
  %tr
    %td
      %b
        Model:
    %td
      =h @hardware.model 
  %tr	
    %td
      %b
        Ip:
    %td
      =h @hardware.ip 
  %tr
    %td
      %b
        Mac:
    %td
      =h @hardware.mac 

    =render :partial => 'current_user' if @hardware.owner

  %tr
    %td
      %b
        Description:
    %td
      =textilize(@hardware.description) 


=link_to_remote 'Edit', :url => edit_hardware_path(@hardware), :update => 'container', :method => :get
|
=link_to 'Back', hardwares_path 


%h2
  New ticket
-form_remote_for :ticket, @ticket, :url => hardware_ticket_path(@hardware,@ticket), :html => {:id => 'tickets_form'} do |f| 
  %p
    =f.label :title
    =f.text_field :title 
  %p
    =f.label :body
    =f.text_area :body, :rows => 5 
  %p
    =f.submit "Create" 

%h3
  Current Tickets
#current_tickets
  =render :partial => 'tickets/ticket', :collection => @hardware.tickets
