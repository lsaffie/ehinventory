<h1>Editing hardware</h1>

<% form_for(@hardware) do |f| %>
  <%= f.error_messages %>

	<%= f.label :hardware_type %><br/>
	<%= select("hardware_type","hardware_type_id", HardwareType.find(:all).collect {|p| [p.name, p.id]}, { :include_blank => false, :selected => @hardware.hardware_type_id}) %>
	
  <p>
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </p>

  <p>
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </p>
  <p>
    <%= f.label :mac %><br />
    <%= f.text_field :mac %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @hardware %> |
<%= link_to 'Back', hardwares_path %>
