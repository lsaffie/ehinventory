-form_tag hardwares_path, :method => 'get' do 
  %p
    =text_field_tag :search, params[:search] 
    =submit_tag "Search Hardwares", :name => nil 

%h1
  Hardwares

%table
  %tr
    %th
      SN
    %th
      Type
    %th
      User
    %th
      Ip
    %th
      Action

  - for hardware in @hardwares 
    %tr{:class => cycle('even','odd')}
      %td
        =link_to hardware.serial_number, hardware 
      %td
        =link_to hardware.hardware_type.name, :action => 'index', :hardware_type => hardware.hardware_type 
      %td
        =h hardware.owner.name if hardware.owner
      %td
        =h hardware.ip 
      %td
        =link_to 'Destroy', hardware, :confirm => 'Are you sure?', :method => :delete 
  
%br

= link_to 'New hardware', new_hardware_path 
