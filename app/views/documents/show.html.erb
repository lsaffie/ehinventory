<p>
  <b>Title:</b>
  <%=h @document.title %>
</p>

<p>
  <b>Body:</b>
    <%= textilize(@document.body) %>
</p>
<p>
  <!-- <b>Files</b><br /> -->
  <%#= image_tag @document.file.url(:thumb) %>
  <%#= link_to @document.file, @document.file.url %> <br>
<p>

<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>

<h2>New ticket</h2>
<% form_for :ticket, @ticket, :url => document_ticket_path(@document,@ticket) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 5 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<h3>Current Tickets</h3>
<% for ticket in @document.tickets %>
	<%= link_to ticket.title, document_ticket_path(@document, ticket) %>
	<%= ticket.created_at %>
	<%= link_to 'Destroy', ticket, :method => :delete %>
<% end %>