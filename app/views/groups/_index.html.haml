%h1
  Groups

=link_to_remote 'New group', :url => new_group_path, :update => 'container'
%table{:class => 'index_table'}
  %thead
    %th
      Name
    %th{ :html => colspan="3" }
      Actions

  -for group in @groups 
    %tr{ :class => cycle('even','odd'), :id => "group_#{group.id}"}
      %td
        =link_to group.name, group
      %td
        =link_to_remote 'Destroy', :url => group, :confirm => 'Are you sure?', :method => :delete 

=link_to_remote 'New group', :url => new_group_path, :update => 'container'
