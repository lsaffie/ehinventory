%h1
  Editing owner

-form_remote_for(@owner) do |f| 
  =f.error_messages 

  %p
    =f.label :name 
    =f.text_field :name 
  
  %p
    =select("group","group_id", Group.find(:all).collect {|p| [p.name, p.id]}, { :selected => @owner.group_id}) 
  

  %p
    =f.submit "Update" 
  
=link_to_remote 'Show', :url => @owner
