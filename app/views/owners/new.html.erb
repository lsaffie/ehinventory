<h1>New owner</h1>

<% form_for(@owner) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
		<%= select("group","group_id", Group.find(:all).collect {|p| [p.name, p.id]}, { :include_blank => true}) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', owners_path %>
